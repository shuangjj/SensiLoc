<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >
    
	<!-- Experiment Time -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Experiment Time:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

	   <EditText
	       android:id="@+id/editText_time"
	       android:layout_width="0dp"
	       android:layout_height="wrap_content"
	       android:layout_weight="1.79"
	       android:ems="10"
	       android:text="2"
	       android:inputType="number" />

	   <TextView
	       android:id="@+id/textView3"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="min"
	       android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
    
	<!-- Location update Frequency -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"
		android:layout_marginLeft="5dp" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Update Frequency:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText_utfreq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.79"
            android:ems="10"
            android:text="5"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sec"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    
    <!-- Record Frequency -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
		android:layout_marginLeft="5dp" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Record Frequency:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText_rdfreq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.79"
            android:ems="10"
            android:text="5"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sec"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    
	<!-- Methods: GPS, wifi, adaptive -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"

            android:text="Method:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spinner_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.28" />

    </LinearLayout>
    
    <!-- Turning delay time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="170dip"
            android:layout_height="wrap_content"
            android:text="Turning Delay:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText_turn_delay"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="60"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sec"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
    
	<!-- Turning angle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="170dip"
            android:layout_height="wrap_content"
            android:text="Turning Angle"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spinner_turning_angle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
    
	<!-- Start & Stop -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_start"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:width="50dp" />

        <Button
            android:id="@+id/button_stop"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Stop" />

    </LinearLayout>
    
	<!-- Show result -->
 	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
	    <TextView
	        android:id="@+id/textView_result"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:text=""
	        android:inputType="textMultiLine"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	</LinearLayout>

	
</LinearLayout>

