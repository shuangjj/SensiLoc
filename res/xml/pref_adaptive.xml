<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- turning delay -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_turn_delay"
        android:inputType="number"
        android:key="pref_turn_delay"
        android:selectAllOnFocus="true"
        android:title="@string/pref_title_turn_delay" />
    <!-- turning angle -->
	<ListPreference
        android:defaultValue="90"
        android:entries="@array/pref_turn_angle_list_titles"
        android:entryValues="@array/pref_turn_angle_list_values"
        android:key="pref_turn_angle_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_turn_angle_title" />
	
</PreferenceScreen>